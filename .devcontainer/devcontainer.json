{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "runArgs": [
    "--env-file", ".env"
  ],

  "postCreateCommand": "pip install -r requirements.txt",

  "postAttachCommand": {
    "server": "streamlit run streamlit_main_app.py --server.enableCORS false --server.enableXsrfProtection false"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },

  "forwardPorts": [
    8501
  ],
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  }
}